<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
     >

    <RelativeLayout
        android:id="@+id/relativeLayout_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#228B22" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dip"
            android:layout_height="20dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/xiaogen" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="200dp"
              android:layout_toRightOf="@id/imageView1"
              android:layout_marginLeft="40dp"
            android:text="病人输液情况"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout_top_bar"
        android:textColor="#FFFFFF"
        android:text="Message" />

    <Button
        android:id="@+id/button_stop"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button_action"
        android:layout_below="@+id/button_action"
        android:layout_marginTop="150dp"
        android:background="@drawable/tingzhi"
        android:text="Stop" />

 

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="400dp"
        android:layout_height="500dp"
         android:layout_marginRight="50dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="100dp" 
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/textView_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="Empty"
            android:textColor="#FF0000"
            android:textSize="45px" />

    </ScrollView>
    
    

    
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="40dp"
           android:textColor="#FFFFFF"
        android:ems="50"
        android:text="Address" />

  

    <Button
        android:id="@+id/button_action"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/anniu"
        android:text="Action" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button_action"
        android:layout_below="@+id/address"
        android:layout_marginTop="28dp"
        android:text="Time"
        android:textColor="#FFFFFF" />

</RelativeLayout>